# 中国股票数据同步系统 - 环境变量配置模板

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=stock_data

# 同步配置
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1
BATCH_SIZE=100
SYNC_INTERVAL=3600
ENABLE_GENTLE_MODE=true

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/stock_sync.log

# 数据库优化配置
ENABLE_OPTIMIZATION=true
OPTIMIZE_INTERVAL=86400

# 其他配置
ENABLE_DEBUG=false
ENABLE_PROFILING=false